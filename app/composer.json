{
  "name": "alfa/interview",
  "description": "Interview exercise for PHP developers: refactor and improve an insurance calculator.",
  "type": "project",
  "require": {
    "php": "^8.3"
  },
  "scripts": {
    "run-solution": "php bin/console.php",
    "run-original": "php run.php",
    "test": "phpunit --colors=always",
    "coverage-report": "phpunit --colors=always --coverage-html build/coverage",
    "mutation-report": "infection",
    "cs": "phpcs --standard=PSR12 src tests",
    "fix-cs": "phpcbf --standard=PSR12 src tests"
  },
  "autoload": {
    "psr-4": {
      "Alfa\\Interview\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^4.0",
    "phpunit/phpunit": "^12.4",
    "infection/infection": "^0.31.2"
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
